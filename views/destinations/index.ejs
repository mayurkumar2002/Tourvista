<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
    <h1 class="py-4">All Destinations</h1>

    <% for(let destination of destinations){ %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(destination.images.length){ %>
                        <img class="img-fluid" alt="" src="<%= destination.images[0].url %>">
                    <% }else{ %>
                        <img class="img-fluid" alt="" src="https://res.cloudinary.com/dtfecgjng/image/upload/v1686128559/Tourvista/h1lg2ya1lflkkvbiymgl.webp">
                    <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= destination.title %></h5>
                        <p class="card-text"><%= destination.description %></p>
                        <p class="card-text">
                            <small class="text-muted"><%= destination.location %></small>    
                        </p>
                        <a class="btn btn-primary" href="/destinations/<%= destination._id %>">View <%= destination.title %></a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
    <a class="btn btn-success mb-4" href="/destinations/new">Add Destination</a>

<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
    const destinations = {features: <%- JSON.stringify(destinations) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>